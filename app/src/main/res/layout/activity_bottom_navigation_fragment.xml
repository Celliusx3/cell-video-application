<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rlRoot">

    <com.cellstudio.cellvideo.presentation.components.DisableSwipeViewPager
        android:id="@+id/dsvpRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bnvRoot"
        android:background="@color/transparent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bnvRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        app:itemIconTint="@drawable/bnv_tab_item"
        app:itemTextColor="@drawable/bnv_tab_item" />

</RelativeLayout>